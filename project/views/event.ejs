<!DOCTYPE html>
<html>
  <head>
     <script type = "text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3&key=AIzaSyCb9wRumFqLsS70GZQ4wzouUmaETo2Mv84&sensor=false"></script>
    <script type = "text/javascript" src = "/javascripts/jquery-1.8.3.min.js"></script>
    <script type = "text/javascript" src = "/javascripts/event.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
<script type="text/javascript">
      function initialize() {
       var latLng = new google.maps.LatLng(<%=event.latitude%>,
                                                 <%=event.longitude%>);
        var mapOptions = {
          center : latLng,
          zoom: 8,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("map_canvas"),
            mapOptions);
        var marker = new google.maps.Marker({
                position: latLng,
                title: "<%= event.name %>"
            });
        marker.setMap(map);
      }
    </script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body onload = "initialize()">
    <h1><%= event.name %></h1>
    <form action = "/joinevent">
        <input type = "text" value = "<%= event._id %>" name = "eventid" style = "display:none;" />
        <input type = "submit" value = "Join Event" />
    </form>
    <form id = "createMessage">
        <input type = "hidden" value = "<%= event._id %>" name = "eventid" />
        <textarea rows = 15 cols = 30 name = "content"></textarea>
        <input type = "submit" value = "Send Message" />
    </form>
    <div><%= event.description %></div>
    <div><%= event.address %></div>
    <div><%= event.city %></div>
    <div><%= event.state %></div>
    <div><%= event.zipcode %></div>
    <div><%= event.start_time %></div>
    <div><%= event.end_time %></div>
    <div>Attending Users:</div>
    <ul>
    <% for (var i = 0; i < event.users.length; i++) { %>
        <li><%= event.users[i] %></li>
    <% } %>
    <div id = "map_canvas" style = "width: 600px; height: 600px"></div>
  </body>
</html>