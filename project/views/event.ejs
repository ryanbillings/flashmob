<!DOCTYPE html>
<html>
  <head>
     <script type = "text/javascript" src="https://maps.googleapis.com/maps/api/js?v=3&key=AIzaSyCb9wRumFqLsS70GZQ4wzouUmaETo2Mv84&sensor=false"></script>
    <script type = "text/javascript" src = "/javascripts/jquery-1.8.3.min.js"></script>
    <script type = "text/javascript" src = "/javascripts/event.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
<script type="text/javascript">
      function initialize() {
       var latLng = new google.maps.LatLng(<%=event.latitude%>,
                                                 <%=event.longitude%>);
        var mapOptions = {
          center : latLng,
          zoom: 8,
          mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var map = new google.maps.Map(document.getElementById("map_canvas"),
            mapOptions);
        var marker = new google.maps.Marker({
                position: latLng,
                title: "<%= event.name %>"
            });
        marker.setMap(map);
      }
    </script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body onload = "initialize()">   
  <a href = "#"><img src = "/images/flashmoblogo.png" id = "logo"/></a>
    <div id="eventdescbox" style="width:50%;">
      <div class="eventdesc">
       <h1><%= event.name %></h1>
      </div>
      <div class="eventdesc">
        Address: <%= event.address %>
      </div>
      <div class="eventdesc">
        City: <%= event.city %>
      </div>
      <div class="eventdesc">
        State: <%= event.state %>
      </div>
      <div class="eventdesc">
        Zipcode: <%= event.zipcode %>
      </div>
      <div class="eventdesc">
        Start Time: <%= stime %>
      </div>
      <div class="eventdesc">
        End Time: <%= etime  %>
      </div>
      <div class="eventdesc">
       Description: <%= event.description %>
      </div>
    </div>
    <div id = "map_canvas" class="eventdescbox" style = "width: 600px; height: 600px; float:right; right: 30px;"></div>
    <div id="attendees">
      Attending Users:
      <ul id="sortablelist">
        <% for (var i = 0; i < users.length; i++) { %>
          <li id="listitem" class="clearfix header">
            <%= users[i].username %>
          </li>
        <% } %>
      </ul>
      <form action = "/joinevent">
          <input type = "text" value = "<%= event._id %>" name = "eventid" style = "display:none;" />
          <input type = "submit" value = "Join Event" />
      </form>
      <a href = "/chat/<%= event._id %>">Chat</a>
    </div>
    
  </body>
</html>